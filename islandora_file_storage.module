      'destination_dsid' => 'TN',
      'weight' => '0',
      'function' => array(
        'islandora_file_storage_create_thumbnail',
      ),
      'file' => drupal_get_path('module', 'islandora_file_storage') . '/includes/derivatives.inc',
    ),
  );
}
