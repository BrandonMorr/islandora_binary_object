/**
 * Implements hook_islandora_ingest_steps().
 */
function islandora_file_storage_islandora_file_storageCModel_islandora_ingest_steps() {
  return array(
    'islandora_file_storage' => array(
      'weight' => 10,
      'type' => 'form',
